<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>TrainingProject_Kishan</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
  	<servlet-name>RegisterServlet</servlet-name>
  	<servlet-class>com.techaspect.servlet.RegisterCustomerServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ContactServlet</servlet-name>
  	<servlet-class>com.techaspect.servlet.ContactServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ChangePasswordServlet</servlet-name>
  	<servlet-class>com.techaspect.servlet.ChangePasswordServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ProductListServlet</servlet-name>
  	<servlet-class>com.techaspect.servlet.ProductListServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>InsertAddressServlet</servlet-name>
  	<servlet-class>com.techaspect.servlet.InsertAddressServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>com.techaspect.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>VendorLoginServlet</servlet-name>
  	<servlet-class>com.techaspect.servlet.VendorLoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ProductDescriptionServlet</servlet-name>
  	<servlet-class>com.techaspect.servlet.ProductDescriptionServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>SetOrderSession</servlet-name>
  	<servlet-class>com.techaspect.servlet.SetOrderServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CartServlet</servlet-name>
  	<servlet-class>com.techaspect.servlet.CartServlet</servlet-class>
  </servlet>
  <servlet>
		<servlet-name>AddProductServlet</servlet-name>
		<servlet-class>com.techaspect.servlet.InsertProduct</servlet-class>
		
		<multipart-config>
        	<max-file-size>10485760</max-file-size>
        	<max-request-size>20971520</max-request-size>
        	<file-size-threshold>5242880</file-size-threshold>
    	</multipart-config>
  </servlet>
  <servlet>
		<servlet-name>UpdateProductServlet</servlet-name>
		<servlet-class>com.techaspect.servlet.UpdateProduct</servlet-class>
		
		<multipart-config>
        	<max-file-size>10485760</max-file-size>
        	<max-request-size>20971520</max-request-size>
        	<file-size-threshold>5242880</file-size-threshold>
    	</multipart-config>
  </servlet>
  <servlet>
  	<servlet-name>DeleteProduct</servlet-name>
  	<servlet-class>com.techaspect.servlet.DeleteProduct</servlet-class>
  </servlet>
  <servlet-mapping>
		<servlet-name>SetOrderSession</servlet-name>
		<url-pattern>/setOrder</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
		<servlet-name>AddProductServlet</servlet-name>
		<url-pattern>/insertProduct</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
		<servlet-name>DeleteProduct</servlet-name>
		<url-pattern>/deleteProduct</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
		<servlet-name>UpdateProductServlet</servlet-name>
		<url-pattern>/updateProduct</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>RegisterServlet</servlet-name>
  	<url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ContactServlet</servlet-name>
  	<url-pattern>/contact</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ChangePasswordServlet</servlet-name>
  	<url-pattern>/changepwd</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ProductDescriptionServlet</servlet-name>
  	<url-pattern>/description</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CartServlet</servlet-name>
  	<url-pattern>/cart</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ProductListServlet</servlet-name>
  	<url-pattern>/productList</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>InsertAddressServlet</servlet-name>
  	<url-pattern>/addaddress</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>VendorLoginServlet</servlet-name>
  	<url-pattern>/vendor_login</url-pattern>
  </servlet-mapping>
  
  <error-page>
  	<error-code>404</error-code>
  	<location>/Error.jsp</location>
  </error-page>
  <error-page>
  	<exception-type>java.lang.Exception</exception-type>
  	<location>/Exception.jsp</location>
  </error-page>
</web-app>